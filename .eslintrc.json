{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": ["plugin:wdio/recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "prefer-const":"off",
        "no-console":"error",
        "semi":"error",
        "lines-between-class-members":["warn","always"],
        "array-callback-return":"warn",
        "func-call-spacing":["warn","never"],
        "require-await":"error",
        "arrow-spacing": ["warn", { "before": true, "after": true }]
    },
    "plugins": [
        "wdio"
    ]
}
